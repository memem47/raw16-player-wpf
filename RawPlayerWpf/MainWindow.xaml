<Window x:Class="RawPlayerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RAW16 Player" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" Margin="8" Grid.Row="0" VerticalAlignment="Center">
            <Button Content="フォルダ選択" Width="110" Margin="0,0,8,0" Click="BtnSelectFolder_Click"/>
            <Button Content="再生" Width="70" Margin="0,0,6,0" Click="BtnPlay_Click"/>
            <Button Content="停止" Width="70" Margin="0,0,12,0" Click="BtnStop_Click"/>
            <Button Content="前" Width="50" Margin="0,0,6,0" Click="BtnPrev_Click"/>
            <Button Content="次" Width="50" Margin="0,0,12,0" Click="BtnNext_Click"/>

            <CheckBox x:Name="ChkLoop" Content="ループ" IsChecked="True" VerticalAlignment="Center" Margin="0,0,12,0"/>

            <TextBlock Text="W:" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtW" Width="60" Text="512" Margin="4,0,12,0"/>

            <TextBlock Text="H:" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtH" Width="60" Text="512" Margin="4,0,12,0"/>

            <TextBlock Text="FPS:" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtFps" Width="60" Text="30" Margin="4,0,12,0"/>

            <TextBlock x:Name="TxtStatus" VerticalAlignment="Center" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Viewer Area -->
        <Border Grid.Row="1" Margin="8" BorderBrush="Gray" BorderThickness="1" Background="Black">
            <Viewbox Stretch="Uniform">
                <!-- ImageはViewboxでUniform Fit -->
                <Image x:Name="Img" SnapsToDevicePixels="True" />
            </Viewbox>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="2" Margin="8" Foreground="Gray"
                   Text="RAW16 (little-endian) / Gray16表示。フォルダを選択して再生。"/>
    </Grid>
</Window>
